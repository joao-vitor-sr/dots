# ======== MUSIC =========

# Toggle music
super + r
	mpc toggle	

# Change Music time

super + {slash,equal}
	mpc seek {-10,+10}

# Increase and Decrease volume 
super + bracket{left,right}
	pamixer --allow-boost {-d,-i} 5

# open pulsemixer
super + alt + bracketright
	$TERMINAL -e pulsemixer

# Mute Audio
super + alt + bracketleft
	pamixer -t

# ========= DUNST =========
# Close dunst notification
super + BackSpace
	dunstctl close-all

# ========= TERMINAL FUNCTIONS =====
# Open email
super + period
	$TERMINAL -e neomutt

# Open nmtui
super + alt + comma
	$TERMINAL -e doas nmtui
# Open ncmpcpp
super + m
	$TERMINAL -e ncmpcpp
# Terminal
super + Return
	$TERMINAL -e fish
# Open document wiki
super + b
	$TERMINAL -e nvim $HOME/Documents/vimwiki/index.wiki

# ========= BROWSER ============
super + comma
	$BROWSER

# =========== DMENU ============
# Open Dmenu
super + e
	rofi -show run -m -4
# Open Dmenu with emojis
super + alt + c
	rofi -show emoji -mod1 emoji -m -4
# Open Calculator
super + l
	rofi -show calc -modi calc -no-show-match -no-sort -m -4
# Open system manager
super + Escape
	rofi -show p -modi p:$HOME/.config/rofi/scripts/rofi-power-menu -m -4

# Open dmenu with passwords
super + alt + e
	rofi-pass -m -4

# ======= FUNCTIONS SHORTCUTS ==========
# Select display
super + F3
	displayselect_rofi
# Torrent
super + F6
	torwrap
# turn off transmission daemon
super + F7
	td-toggle
# update email
super + F8
	mw -Y
# dmenu mount
super + F9
	dmenumount

super + F11
	remaps
super + F12
	remaps_qwerty
# ============= PRINT =========
alt + Print
	maimpick

# ============= MOUSE =========
button2
	xte 'keydown Control_L' 'keydown c' 'keyup Control_L' 'keyup c'

# =========== BSPWM ==============
# close and kill
super + {_,alt + }apostrophe
	bspc node -{c,k}

# set fullscreen
super + u
	bspc desktop -l next

# swap the current node and the biggest window
super + c
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + p
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,alt + }{d,h,t,n}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + {_,alt + }{i,s}
	bspc {desktop -f,node -d} {prev,next}.local --follow

# focus or send to the given desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

super + alt + {1-9,0}
  bspc node -d '^{1-9,10}' --follow

# Send to monitor
super + z
  bspc node -m last --follow

super + v
  bspc monitor {west,east} -f 

# preselect the direction
super + ctrl + {d,h,t,n}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused desktop
super + alt + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# ============== MISK ==============
# Change wallpaper
super + F2
  setbg $HOME/Pictures/wallpapers/
